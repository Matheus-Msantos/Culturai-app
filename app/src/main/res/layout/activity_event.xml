<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="150dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:id="@+id/imageEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="5dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEventPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:drawablePadding="3dp"
                android:drawableTint="@color/orange_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textEventAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/location_maps"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/time"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textEventClassification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/world"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textEventCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_baseline_category_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_500"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="Descrição"
                android:textColor="#F17604"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="12dp"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textButtonEnable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Para comprar esse ingresso, você precisar fazer o login primeiro"
                android:textAlignment="center"
                android:textSize="16dp" />

            <Button
                android:id="@+id/buttonTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="62dp"
                android:backgroundTint="@color/orange_500"
                android:text="Comprar ingresso"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>